<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
                 
<bean id="add" class="code.Address" >
	<property name="city">  <value>Pune</value>  </property>  
	<property name="state">  <value>MH</value>  </property>
</bean>  
 
<bean id="empbean" class="code.Employee" >  
	<property name="eno">  <value>20</value>  </property>
	<property name="salary">  <value>1000</value>  </property>   
	<property name="ename">  <value>Alisa</value>  </property>  
	<property name="address" ref = "add"> </property>
</bean>  
</beans>